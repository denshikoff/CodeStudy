unit USend;

interface
uses SysUtils;
type
  TSend = class
    private
      FnameSend, FnameGet:String;
      Fdate:integer;
    public
      procedure create(Pnamesend, PnameGet:String; Pdate:integer);
      property nameSend:string read FnameSend write FnameSend;
      property nameGet:string read FnameGet write FnameGet;
      property date:integer read Fdate write Fdate;
      function toString:String; virtual;
  end;
implementation
  procedure TSend.create(Pnamesend, PnameGet:String; Pdate:integer);
  begin
    FnameSend := Pnamesend;
    FnameGet := PnameGet;
    Fdate := Pdate;
  end;

  function TSend.toString:String;
  begin
    result := result + 'Отправитель: ' + FnameSend + ' Получатель: ' + FnameGet + ' Дата: ' + inttostr(Fdate);
  end;
end.
 